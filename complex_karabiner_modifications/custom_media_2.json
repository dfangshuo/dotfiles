
{
  "title": "Home row custom volume, play, pause controls",
  "rules": [
    {
      "description": "Change left_control + -  to be volume_decrement",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "hyphen",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "volume_decrement"
            }
          ]
        }
      ]
    },
    {
      "description": "Change left_control + +  to be volume_increment",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "equal_sign",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "volume_increment"
            }
          ]
        }
      ]
    },
    {
      "description": "Change left_control + [  to be skip backward",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "rewind"
            }
          ]
        }
      ]
    },
    {
      "description": "Change left_control + ] to be skip forward",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "close_bracket",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "fastforward"
            }
          ]
        }
      ]
    },
    {
      "description": "Change left_control + p to be play/pause",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "play_or_pause"
            }
          ]
        }
      ]
    }
  ]
}
